<link rel="stylesheet" href="../styles/styles.pcss">

<div class="profile-screen">
    <div class="profile-screen-content">
        <img class="profile-screen-content__avatar" src="../assets/images/avatar-default.jpeg" width="130" alt="default-avatar"/>
        <p class="profile-screen-content__user-name">Iaroslav</p>
        <div>
            <a class="navigation-link" href="/">Go to main ></a>
        </div>
        <form class="fields-wrapper">
            <ul class="fields">
                <li class="fields__field">
                    <p class="fields__field-name">Почта</p>
                    <input class="fields__input" name="email" placeholder="Your mail">
                </li>
                <li class="fields__field">
                    <p class="fields__field-name">Логин</p>
                    <input class="fields__input" name="login" placeholder="Your login">
                </li>
                <li class="fields__field">
                    <p class="fields__field-name">Имя</p>
                    <input class="fields__input" name="first_name" placeholder="Your name">
                </li>
                <li class="fields__field">
                    <p class="fields__field-name">Фамилия</p>
                    <input class="fields__input" name="second_name" placeholder="Your surname">
                </li>
                <li class="fields__field">
                    <p class="fields__field-name">Имя в чате</p>
                    <input class="fields__input" name="display_name" placeholder="Your chatname">
                </li>
                <li class="fields__field">
                    <p class="fields__field-name">Телефон</p>
                    <input class="fields__input" name="phone" placeholder="Your phone number">
                </li>
            </ul>
        </form>
        <div class="actions">
            <button type="button" class="actions__button">Изменить данные</button>
            <button type="button" class="actions__button">Изменить пароль</button>
            <button type="button" class="actions__button actions__button_alert-color">Выйти</button>
        </div>
    </div>
</div>
