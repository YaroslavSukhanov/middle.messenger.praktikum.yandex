<div class="sign-up-screen">
    <div class="sign-up-screen-content">
        <h1 class="sign-up-screen-content__title" >Sign In</h1>
        <form class="fields-wrapper">
        <ul class="fields">
            <li class="fields__field">
                <p class="fields__field-name">Login</p>
                <input class="fields__input" name="chat-searchbar" placeholder="Your login">
            </li>
            <li class="fields__field">
                <p class="fields__field-name">Password</p>
                <input class="fields__input" name="chat-searchbar" placeholder="Your phone number">
            </li>
        </ul>
        </form>
        <div class="actions">
            <button type="submit" class="actions__button">Go!</button>
            <button type="button" class="actions__button actions__button_accept-color">Sign Up</button>
        </div>
        </form>
        <div>
            <a class="navigation-link" href="/">Go to main ></a>
        </div>
    </div>
</div>
