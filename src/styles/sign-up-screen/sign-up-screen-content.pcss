.sign-up-screen-content {
    background-color: #212121;;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 340px;
    padding: 50px 30px 30px;
    border: 0;
    border-radius: 40px;
    box-shadow: 0px 0px 100px #ffffff;
    &__title {
        color: var(--text-color);
        font-weight: 500;
        font-size: 20px;
        line-height: 20px;
    }
}
