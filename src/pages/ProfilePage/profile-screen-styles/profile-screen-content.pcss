.profile-screen-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 510px;

    &__avatar {
        border-radius: 65px;
        cursor: pointer;
    }

    &__avatar:hover {
        opacity: 0.25;
        transition: all 200ms ease-in-out;
        transform: scale(1.1);
    }

    &__user-name {
        color: var(--text-color);
        font-weight: 600;
        font-size: 16px;
        line-height: 16px;
    }
}

